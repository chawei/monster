<center>
<div id="main">

	<div class="content">
		
		<div id="latest_label">Monster Bites on <%= @date.strftime("%b.%e.%Y") %></div>
		
		<div class="today clear_fix">
			<div class="left_col left">
				<div class="date">
				  <div id="count"><%= @bites.count %></div>
				</div>
			</div>
		
			<div class="img_container">
			  <% @bites.each do |bite| %>
			    <% if !bite.photo.nil? && bite.photo.data.exists? %>
			    <a href="<%= bite.photo.data.url(:medium) %>" rel="img_group"><%= image_tag bite.photo.data.url(:thumb) %></a>
			    <% end %>
			  <% end %>
			</div>
		</div>
	</div>
	
	<div class="ip_list">
		<div class="title">Top 10 Sources</div>
		<% @factor = get_factor(@top_sources) %>
		<% @top_sources.each do |source| %>		
  		<% unless source[0].nil? %>
  		<div class="ip" style="font-size:<%= get_font_size(@factor, source[1], @top_sources[-1][1]) %>px">
  		  <%= source[0].gsub(/^www\./, '') %> <span style="font-style:italic"><%= source[1] %></span>
  		</div>
  		<% end %>
		<% end %>
	</div>

</div>
	
</center>

<div id="menu">
	<span id="monster_wall"><a href="/">Monster Wall</a></span> /
	<span id="monster_about"><a href="/about">About</a></span>
</div>

<% content_for :foot do %>
<link rel="stylesheet" type="text/css" href="/javascripts/fancybox/jquery.fancybox-1.3.4.css" media="screen" />
<% end %>

<% content_for :foot do %>
<script type="text/javascript" src="/javascripts/fancybox/jquery.mousewheel-3.0.4.pack.js"></script>
<script type="text/javascript" src="/javascripts/fancybox/jquery.fancybox-1.3.4.pack.js"></script>
<script type="text/javascript" charset="utf-8">
  $(document).ready(function() {
    $(".img_container a[rel=img_group]").fancybox({
			'transitionIn'		: 'none',
			'transitionOut'		: 'none',
			'titlePosition' 	: 'over',
		});
  });
</script>
<% end %>